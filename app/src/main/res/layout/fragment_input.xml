                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/HeartButt1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        style="?attr/materialButtonOutlinedStyle"
                        />
