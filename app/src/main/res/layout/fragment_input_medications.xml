<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputMedicationsFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/medName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Medication Name"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/medicationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="Choose Time"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/medDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Medication Dosage (mg)"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/medActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
            android:hint="Enter Medication Actions"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/medDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
            android:hint="Enter Medication Directions"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/medTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Total Amount (mg)"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/submitInputMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>